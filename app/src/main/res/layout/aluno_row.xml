<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame"
    tools:context=".Falta"
    style="@style/TableRowButton"
    android:paddingTop="10dp"
    android:radius="10dp"
    tools:ignore="OnClick"
    >
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardElevation="5dp"
        android:layout_margin="1dp"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/row_layout"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="#bb66b7">

            <android.support.v7.widget.Toolbar

                android:id="@+id/toolbar2"
                style="@style/secondaryToolbar"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:adjustViewBounds="true"
                android:background="@drawable/pessoa"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar2" />


            <TextView
                android:id="@+id/textView14"
                style="@style/secondaryToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView

                android:id="@+id/textView13"
                style="@style/secondaryToolbarTitle"
                android:layout_width="151dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="95dp"
                android:layout_marginTop="8dp"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />


            <Switch

                android:layout_width="wrap_content"

                android:layout_height="39dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/SwitchFaltas"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Justificada | Material | Injustificada | Disciplinar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                app:layout_constraintVertical_bias="1.0" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</TableRow>
