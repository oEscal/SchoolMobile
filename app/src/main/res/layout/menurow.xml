<?xml version="1.0" encoding="utf-8"?>

<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TitleSchedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_frame"

    >

    <android.support.v7.widget.CardView

        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardElevation="5dp"
        android:layout_margin="1dp"
        >

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccentLight">

            <android.support.v7.widget.Toolbar
                android:id="@+id/_toolbar"
                style="@style/secondaryToolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/secondaryToolbarTitle"
                app:layout_constraintBottom_toBottomOf="@+id/_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/_toolbar"
                />

            <TableLayout
                style="@style/secondaryTable"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/_toolbar">

                <TableRow
                    style="@style/TableRowButton"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    >

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            style="@style/firstRowSchedule"
                            android:layout_width="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    </android.support.constraint.ConstraintLayout>

                </TableRow>

                <TableRow
                    style="@style/TableRowButton"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="12sp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            style="@style/firstRowSchedule"
                            android:layout_width="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                </TableRow>

                <TableRow
                    style="@style/TableRowButton"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            style="@style/firstRowSchedule"
                            android:layout_width="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    </android.support.constraint.ConstraintLayout>

                </TableRow>


            </TableLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</TableRow>