<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorMainTittle</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
    </style>


    <style name="MainButton" parent="Theme.AppCompat">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">30sp</item>

        <item name="android:textAlignment">viewStart</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawableEnd">@drawable/next_arrow</item>

    </style>

    <style name="OtherButtonMenu" parent="MainButton">
        <item name="android:background">@drawable/other_button_menu</item>
    </style>

    <style name="CellHorario">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="CellHorarioWithIcon" parent="CellHorario">
        <item name="android:drawableBottom">@drawable/next_horario</item>
    </style>

    <style name="CellHorarioEmpty" parent="CellHorarioWithIcon">
        <item name="android:background">@drawable/main_button_empty</item>
    </style>


    <style name="OtherButtonMenuHorario">
        <item name="android:background">@drawable/other_button_menu</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableRowButton" parent="Theme.AppCompat">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TopBarText" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">40sp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">105dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="secondaryToolbar" parent="Theme.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#9b59b6</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="secondaryToolbarTitle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="titleTableRow" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="cellTableRow" parent="titleTableRow">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="secondaryTable" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="firstRowSchedule" parent="Theme.AppCompat">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">23sp</item>

    </style>

    <style name="TitleSchedule" parent="Theme.AppCompat">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">12dp</item>

    </style>

    <style name="RowHorario" parent="Theme.AppCompat">

        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">70dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchFaltas" >
        <item name="colorSwitchThumbNormal">@color/colorDanger</item>
        <item name="android:colorForeground">@color/colorDanger</item>
        <item name="android:colorControlNormal">@color/colorDanger</item>
        <item name="android:colorControlHighlight">@color/colorDanger</item>
        <item name="android:colorControlActivated">#B0FFFFFF</item>
    </style>

</resources>
