<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorMainTittle</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
    </style>


    <style name="MainButton" parent="Theme.AppCompat">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">30sp</item>

        <item name="android:textAlignment">viewStart</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawableEnd">@drawable/next_arrow</item>

    </style>

    <style name="OtherButtonMenu" parent="MainButton">
        <item name="android:background">@drawable/other_button_menu</item>
    </style>

    <style name="TableRowButton" parent="Theme.AppCompat">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TopBarText" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">40sp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">105dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="secondaryToolbar" parent="Theme.AppCompat" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#bb66b7</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="secondaryToolbarTitle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="titleTableRow" parent="Theme.AppCompat">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">23sp</item>
    </style>


    <style name="cellTableRow" parent="titleTableRow">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="secondaryTable" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="firstRowSchedule"   parent="Theme.AppCompat">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">23sp</item>

    </style>

    <style name="TitleSchedule"   parent="Theme.AppCompat">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">12dp</item>

    </style>



</resources>
